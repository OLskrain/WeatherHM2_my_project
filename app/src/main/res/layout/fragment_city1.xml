<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:elevation="1dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="25dp"
    card_view:contentPaddingBottom="20dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    tools:context="com.example.olskr.weatherhm2.DiscountCard">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/city_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/city"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="240dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Moscow"
            android:textSize="@dimen/text_size_20"
            android:textColor="@android:color/black"
            card_view:layout_constraintHorizontal_bias="0.651"
            card_view:layout_constraintStart_toEndOf="@+id/city_image"
            card_view:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
